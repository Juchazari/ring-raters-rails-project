<h1>Edit Review</h1>
<%= form_for @review do |f| %>

    <% if @review.errors.any? %>
        <ul>
            <% @review.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :rating %>
    <%= f.number_field :rating  %>

    <%= f.submit %>

<%end%>