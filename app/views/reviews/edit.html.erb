<h1>Edit Review</h1>
<%= form_with model: @review, url: onion_ring_review_path do |f| %>

    <% if @review.errors.any? %>
        <ul>
            <% @review.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :rating %>
    <%= f.number_field :rating  %>

    <%= f.submit "Update" %>

<%end%>